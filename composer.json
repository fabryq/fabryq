{
  "name": "fabryq/monorepo",
  "description": "Fabryq monorepo development",
  "license": "proprietary",
  "type": "project",
  "private": true,
  "require": {
    "php": ">=8.2",
    "fabryq/contracts": "*",
    "fabryq/runtime": "*",
    "fabryq/cli": "*",
    "fabryq/provider-http-client": "*",
    "doctrine/orm": "^2.17",
    "symfony/dotenv": "^6.4 || ^7.0",
    "symfony/twig-bundle": "^6.4 || ^7.0",
    "symfony/yaml": "^6.4 || ^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "repositories": [
    {
      "type": "path",
      "url": "packages/contracts",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "packages/runtime",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "packages/cli",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "packages/provider-http-client",
      "options": {
        "symlink": true
      }
    }
  ],
  "autoload-dev": {
    "psr-4": {
      "Fabryq\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "lint": "php -l $(rg --files -g '*.php' --glob '!vendor/**')"
  }
}
