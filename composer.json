{
  "name": "fabryq/fabryq",
  "description": "PHP/Symfony architecture toolkit for multi-app runtimes.",
  "license": "MIT",
  "version": "0.4.0",
  "type": "project",
  "require": {
    "php": ">=8.2",
    "fabryq/contracts": "^0.4",
    "fabryq/runtime": "^0.4",
    "fabryq/cli": "^0.4",
    "fabryq/provider-http-client": "^0.4",
    "doctrine/doctrine-bundle": "^2.11",
    "doctrine/doctrine-migrations-bundle": "^3.3",
    "doctrine/orm": "^2.17",
    "symfony/console": "^7.0",
    "symfony/dotenv": "^7.0",
    "symfony/framework-bundle": "^7.0",
    "symfony/twig-bundle": "^7.0",
    "symfony/webpack-encore-bundle": "^2.0",
    "symfony/yaml": "^7.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.60",
    "phpstan/phpstan": "^1.11",
    "phpunit/phpunit": "^10.5",
    "symfony/process": "^7.0"
  },
  "repositories": [
    {
      "type": "path",
      "url": "packages/contracts",
      "options": {
        "symlink": true,
        "versions": {
          "fabryq/contracts": "0.4.0"
        }
      }
    },
    {
      "type": "path",
      "url": "packages/runtime",
      "options": {
        "symlink": true,
        "versions": {
          "fabryq/runtime": "0.4.0"
        }
      }
    },
    {
      "type": "path",
      "url": "packages/cli",
      "options": {
        "symlink": true,
        "versions": {
          "fabryq/cli": "0.4.0"
        }
      }
    },
    {
      "type": "path",
      "url": "packages/provider-http-client",
      "options": {
        "symlink": true,
        "versions": {
          "fabryq/provider-http-client": "0.4.0"
        }
      }
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "src/Apps/",
      "App\\Components\\": "src/Components/"
    },
    "classmap": [
      "src/Kernel.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Fabryq\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "env:check": "php tools/env-check.php",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix",
    "stan": "phpstan analyse -c phpstan.neon --no-progress --debug --memory-limit=1G",
    "test": "phpunit",
    "lint": "php tools/lint.php"
  },
  "config": {
    "platform": {
      "php": "8.2.0"
    }
  }
}
